<!DOCTYPE html>
<html>
  <head>
    <% include partials/_head %>
  </head>
  <body>
    <% include partials/_nav %>

    <section class="full-width-flex">
      <div class="signup-container">
        <form action="/signup" method="POST">
          <label for="username" aria-label="username"></label>
          <input type="text" name="username" placeholder="Username">
          <label for="password" aria-label="password"></label>
          <input type="password" name="password" placeholder="Password">
          <label for="first_name" aria-label="first name"></label>
          <input type="text" name="first_name" placeholder="First Name">
          <label for="last_name" aria-label="last name"></label>
          <input type="text" name="last_name" placeholder="Last Name">
          <label for="phone_number" aria-label="phone number"></label>
          <input type="text" name="phone_number" placeholder="Phone Number">
          <input class="sign-up-button" type="submit" value="Sign Up">
        </form>

        <% if(field_errs){ %>
          <div class="err-container">
            <h4>Please enter:</h4>
            <% for(err of field_errs){ %>
              <div class="signup-err-msg">
                <%= `${err} `%>
              </div>
            <% } %>

          </div>
        <% } %>
      </div>
    </section>

  </body>
</html>